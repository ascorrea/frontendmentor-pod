---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import CardInfo from "../components/CardInfo.astro";	
import Form from "../components/Form.astro";
import Sponsors from "../components/Sponsors.astro";
---

<Layout title="Frontend Mentor | Pod request access landing page">
	<main> 
		<section>
			<img class="logo" src="assets/desktop/logo.svg" alt="">
			<div class="content">
				<CardInfo 
					title=" Publish your podcasts "
					highlight="everywhere"
					body="Upload your audio to Pod with a single click. Weâ€™ll then distribute your podcast to Spotify, Apple Podcasts, Google Podcasts, Pocket Casts and more!"
				/>
				<Form
					class="container-form"
					placeholder="Email address"
					titleButton="Request Access"
				/>
				<Sponsors/>
			</div>
			<div class="content-image"></div>
		</section>
	</main>
</Layout>

<style>
	main{
		width: 100vw;
		height: 100vh;
		padding-right: 0;
		display: flex;
		flex-direction: row;
		justify-content: flex-end;
	}
	section{
		width: 1275px;
		height: 640px;
		position: relative;

		.logo{
			width: 134.851px;
			height: 56px;
			position: absolute;
			top: -28px;
			left: 0;
		}
		.content-image{
			position: absolute;
			width: 888px;
			height: 100%;
			bottom: 0;
			right: 0;
			background-image: url("../../public/assets/desktop/image-host.jpg");
			background-size: cover;
			background-repeat: no-repeat;
			mix-blend-mode:screen;
		}
		.content-image::after{
				content:"";
				display: block;
				width: 100%;
				height: 100%;
				opacity: 0.7;
				background: var(--dark-blue);
				mix-blend-mode: multiply;
			}

		.content{
			position:absolute;
			display: flex;
			flex-direction: column;
			bottom: -1px;
			left: 0;
			z-index: 1;
			width: 723px;
			padding-top: 5.5rem;
			padding-right: 3.625rem;
			background-color:var(--dark-blue);
		}
	}

	@media (width < 1280px){
		main{
			padding-right: 0;
			padding-top: 0;
		}
		section{
			width: 729px;
			height: 767px;

			.logo{
				width: 134.851px;
				height: 56px;
				position: absolute;
				top: 50px;
				left: 0;
			}
			.content-image{
				width: 491px;
				height: 100%;
				background-image: url("../../public/assets/tablet/image-host.jpg");
				background-size: contain;
			}
			.content{
				width: 635px;
				padding-top: 80px;
				padding-right: 38px;
			}
		}
	}
	@media (width <= 675px){
		main{
		width: 100vw;
		height: 100vh;
		*padding-right: 23px;
		display: flex;
		flex-direction: row;
		justify-content: flex-end;
		}
		section{
			padding: 23px;
			width: 100%;
			height: 100%;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			gap: 3.5625rem;

			.logo{
				top: 0;
				width: 134.851px;
				height: 56px;
				position: relative;
			}
			.content-image{
				width: 100%;
				height: 100%;
				background-image: url("../../public/assets/mobile/image-host.jpg");
				background-size: cover;
			}
			.content{
				position:relative;
				width: 100%;
				padding-top: 0;
				padding-right: 0;
				background-color:transparent;

				.container-form{
				order: 2;
				}
			}
		}
	}

</style>
